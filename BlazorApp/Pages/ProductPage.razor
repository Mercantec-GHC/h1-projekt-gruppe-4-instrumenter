@page "/product/{id:int}"
@inject InstrumentService ObjCustomService
@using BlazorApp.Data;
@using BlazorApp.Model;
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration


<PageTitle>ProductPage</PageTitle>

@if (Product != null)
{
    <div id="pageContainer">

        <h1 id="productName" class="text-center">@Product.Name</h1>

        <div id="descriptionContainer">
            <div class="description">
                <img id="productImg" src="data:image/jpeg;base64," class="card-img-top" alt="...">
            </div>
            <div class="description">
                <p>Price: @Product.Price</p>
                <p>Condition: @Product.Condition</p>
                <p>type: @Product.TypeInstrument</p>
                <p>Color: @Product.Color</p>
                <p>Year: @Product.Year</p>
                <p>Material: @Product.Material</p>
                <button type="button" class="btn btn-primary">Send Besked</button>
            </div>
        </div>

        <h3 id="descTxt" class="text-center">@Product.Description</h3>
    </div>

}
else
{
    <h1>Loading...</h1>
}



@code {
    [Parameter]
    public int Id { get; set; }


    public Product Product { get; set; }

    protected override void OnInitialized()
    {
        InstrumentService objCS = new InstrumentService(Configuration);
        Product = objCS.GetOneProduct(Id);
        StateHasChanged();
    }
}